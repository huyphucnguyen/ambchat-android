<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.InforUserFragment">
    <!--  <include layout="@layout/app_bar_layout" android:id="@+id/infor_user_toolbar" />-->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:scaleType="center"
        android:src="@drawable/baseline_person_pin_black_48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_username"
            android:layout_weight="0.3"
            android:gravity="left"
            android:text="@string/fullName"
            android:textColor="@color/black"
            android:textAppearance="@style/textMedium" />

        <EditText
            android:id="@+id/edtFullNameInfor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="0.7"
            android:text="@string/fullName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left|center"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_username"
            android:layout_weight="0.3"
            android:gravity="left"
            android:text="@string/userName"
            android:textColor="@color/black"
            android:textAppearance="@style/textMedium" />

        <EditText
            android:id="@+id/edtUserNameInfor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin0"
            android:layout_weight="0.7"
            android:gravity="left"
            android:text="@string/userName"
            android:textColor="@color/black"
            android:textAppearance="@style/textMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_username"
            android:layout_weight="0.3"
            android:gravity="left"
            android:text="@string/password"
            android:textColor="@color/black"
            android:textAppearance="@style/textMedium" />

        <EditText
            android:id="@+id/edtPassWordInfor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:gravity="left"
            android:text="@string/password"
            android:textColor="@color/black"
            android:textAppearance="@style/textMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_username"
            android:layout_weight="0.7"
            android:gravity="left"
            android:text="@string/gender"
            android:textColor="@color/black"
            android:textAppearance="@style/textMedium"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_username"
            android:layout_weight="2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radMaleInfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="@string/male" />

            <RadioButton
                android:id="@+id/radFemaleInfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="@string/female" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_username"
            android:layout_weight="0.4"
            android:gravity="left"
            android:text="@string/email"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtEmailInfor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="left"
            android:hint="@string/email"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateInfor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin100"
        android:layout_marginRight="@dimen/margin100"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/updateInfor"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</LinearLayout>
    <!-- android:textAppearance="@style/textLarge"-->

