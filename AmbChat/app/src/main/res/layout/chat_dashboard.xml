<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAvatarUserChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_person_white_36" />

        <TextView
            android:id="@+id/txtNameUserChat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin"
            android:text="@string/FriendName"
            android:textAppearance="@style/textLarge"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/ColorFriengMess"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUserChatReceive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_white_36" />

            <TextView
                android:id="@+id/txtUserChatReceive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:gravity="center|left"
                android:text="@string/MessLast"
                android:textColor="@android:color/black"
                android:textAppearance="@style/textLarge" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/ColorMyMess"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUserChatSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:gravity="right"
                android:layout_toLeftOf="@id/imgUserChatSend"
                android:text="@string/MessLast"
                android:textAppearance="@style/textLarge"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/imgUserChatSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_white_36" />

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtMess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:hint="Abc"
            android:textAppearance="@style/textSmall"/>

        <ImageView
            android:id="@+id/imgSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_send" />
    </LinearLayout>

</LinearLayout>